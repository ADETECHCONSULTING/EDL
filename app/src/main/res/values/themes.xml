<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.EDL" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorOnSurface">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:textViewStyle">@style/MyTextViewStyle</item>
    </style>

    <style name="ToolbarTheme" parent="ThemeOverlay.MaterialComponents.ActionBar">
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">#EEEEEE</item>
    </style>

    <style name="MyTextViewStyle" parent="android:Widget.TextView">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="MyTextViewStyleLabel" parent="android:Widget.TextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextAppearance.PhotoPicker.Button" parent="TextAppearance.AppCompat.Medium">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">?colorAccent</item>
        <item name="android:includeFontPadding">true</item>
        <item name="android:textSize">@dimen/textSizeMedium</item>
    </style>

    <style name="ChiliPhotoPicker.Light" parent="Theme.MaterialComponents.NoActionBar.Bridge">
        <item name="pickerBackgroundColor">@color/background_light</item>
        <item name="pickerPrimaryColor">@color/text_primary_light</item>
        <item name="pickerSecondaryColor">@color/text_secondary_light</item>
        <item name="pickerControlColor">@color/controls_light</item>
        <item name="pickerCornerRadius">@dimen/background_corner_radius</item>
        <item name="pickerCameraIcon">@drawable/picker_camera</item>
        <item name="pickerGalleryIcon">@drawable/picker_gallery</item>
        <item name="pickerDividerColor">@color/divider_light</item>
    </style>

    <style name="ClickedLot" parent="DefaultLot">
        <item name="lot_fill_color">@color/colorAccent</item>
    </style>

    <style name="DefaultLot">
        <item name="lot_fill_color">@color/white</item>
    </style>

    <style name="ChipStyle" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipStrokeColor">@color/color_choice_chip_strokecolor_selector</item>
        <item name="chipStrokeWidth">2dp</item>
    </style>

    <style name="CheckboxBlackedLargeColored" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:buttonTint">@color/black</item>
        <item name="android:textColor">@color/black</item>
    </style>

</resources>